    <td><%= link_to 'Show', git_group_path(group.git_id,group) %></td>
    <td><%= link_to 'Edit', edit_git_group_path(group.git_id,group) %></td>
    <td><%= link_to 'Destroy', git_group_path(group.git_id,group), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

